<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head.ejs') %>
    <title>Blog</title>
  </head>
  <body>
    <%- include('./partials/nav.ejs') %>
    <div class="container mt-4">
      <img
        src="<%= blog.coverImageURL %>"
        alt="Cover Image"
        width="700px"
        class="img-fluid mx-auto d-block rounded"
      />
      <h1 class="mx-auto text-center"><%= blog.title %></h1>
      <div
        class="container mt-4 d-flex align-items-center"
        style="text-align: center; justify-content: center"
      >
        <img
          src="<%= blog.createdBy.profileImageURL %>"
          alt=""
          width="30px"
          style="margin-right: 10px"
        />
        <h4><%= blog.createdBy.fullName %></h4>
      </div>

      <pre class="mt-4"><%= blog.content %></pre>

      <div class="container mt-6">
        <h1>Comments (<%= comments.length %>)</h1>
        <div class="container mt-4">
          <% comments.forEach(comment => { %>
          <div class="container mt-4 d-flex align-items-center">
            <img
              src="<%= comment.createdBy.profileImageURL %>"
              alt=""
              width="20px"
              style="margin-right: 10px"
            />
            <h5><%= comment.createdBy.fullName %></h5>
          </div>
          <pre><%= comment.content %></pre>
          <% }) %>
        </div>
        <% if (locals.user) { %>
        <form action="/blog/comment/<%= blog._id %>" method="post">
          <div class="mb-3">
            <input
              type="text"
              name="content"
              class="form-control"
              placeholder="Enter your comment..."
            />
            <button type="submit" class="btn btn-sm btn-primary mt-1">
              Add
            </button>
          </div>
        </form>
        <% } %>
      </div>
    </div>
  </body>
  <%- include('./partials/script.ejs') %>
</html>
